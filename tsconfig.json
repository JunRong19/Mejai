{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["vite/client"],
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "allowJs": true,
        "baseUrl": "src",
        "paths": {
            "@Chromium": ["Chromium"],
            "@Plugins": ["Plugins"],
            "@Mejai": ["_Core"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}